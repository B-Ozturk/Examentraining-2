{% extends 'base.html.twig' %}
{% block body %}
<div class="container mt-4">
    <div class="form">
        {{ form_start(carform) }}
        <div class="form-group">
            {{ form_row(carform.model) }}
        </div>
        <div class="form-group">
            {{ form_row(carform.type) }}
        </div>
        <div class="form-group">
            {{ form_row(carform.kleur) }}
        </div>
        <div class="form-group">
            {{ form_row(carform.gewicht) }}
        </div>
        <div class="form-group">
            {{ form_row(carform.prijs) }}
        </div>
        <div class="form-group">
            {{ form_row(carform.voorraad) }}
        </div>
        <div class="form-group">
            <input class="btn btn-success border-dark text-dark" type="submit" value="Toevoegen">
        </div>
        {{ form_end(carform) }}
    </div>
    <a href="/" class="mt-4">HOME</a>
</div>
{% endblock %}
